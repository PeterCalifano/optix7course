{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug_Cmake",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_dev/${relativeFileDirname}/${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CCppmakeDEBUGbuild",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
        },
        {
            "name": "Run_Cmake",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_dev/${relativeFileDirname}/${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CCppmakeRELEASEbuild",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}